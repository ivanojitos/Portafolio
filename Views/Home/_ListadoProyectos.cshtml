@model IEnumerable<ProyectoDTO>

@if (Model is not null)
{
    <div class="container py-5">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var proyecto in Model)
            {
                var modalId = $"modalProyecto{proyecto.Id}"; // Asegúrate de que cada ID es único

                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@proyecto.ImagenURL" class="card-img-top img-fluid rounded-top" alt="Imagen proyecto" style="object-fit: cover; height: 200px;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@proyecto.Titulo</h5>
                            <p class="card-text text-muted">@proyecto.Subtitulo</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <button class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#@modalId">
                                Ver más
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="label@modalId" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="label@modalId">@proyecto.Titulo <br /> @proyecto.Descripcion</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body2">
                                @if (@proyecto.Id == 1)
                                {
                                    <div class="gallery">
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/servimsa-1.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/servimsa-2.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/servimsa-3.png" alt="net logo" />
                                        </div>
                                       
                                    </div>
                                }
                                @if (@proyecto.Id == 2)
                                {
                                    <div class="gallery">
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-1.png" alt="net logo" /> 
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-2.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-3.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-4.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-5.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-6.png" alt="net logo" />
                                        </div>
                                    </div>
                                }
                                @if (@proyecto.Id == 3)
                                {
                                    <div class="gallery">
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-1.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-2.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-3.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-4.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-5.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/walmart-6.png" alt="net logo" />
                                        </div>
                                    </div>
                                }
                                @if (@proyecto.Id == 4)
                                {
                                    <div class="gallery">
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/miches-1.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/miches-2.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/miches-3.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/miches-4.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/miches-5.png" alt="net logo" />
                                        </div>
                                        <div class="gallery-item">
                                            <img id="imagen-net" src="~/imagenes/miches-6.png" alt="net logo" />
                                        </div>
                                    </div>
                                }
                                

                            </div>
                            <div class="modal-footer">
                                <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">Ir al sitio</a>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
